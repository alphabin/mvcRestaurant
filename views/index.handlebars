
<h1>Orders!</h1>

<h2>Devoured!</h2>

<ul>
  {{#each burgername}}
    {{#unless devoured}}
      {{> res/res-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Not Yet!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> res/res-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>




<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burgername">
  </div>

  <button type="submit">Add Burger</button>
</form>
